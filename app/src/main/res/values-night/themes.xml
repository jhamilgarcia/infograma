<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Infogram" parent="Theme.Material3.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item> <!-- esto reemplaza el colorAccent -->


        <item name="textInputStyle">@style/Widget.Infogram.TextInputLayout</item>
    </style>

    <!-- se tuvo que hacer este paso porque desaparece el hint al precionarlo en mi editext ,porque agarra del color primario-->
    <style name="Widget.Infogram.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="hintTextColor">@color/colorAccent</item> <!-- si quieres que el hint tambiÃ©n sea accent al enfocarse -->
    </style>
</resources>
